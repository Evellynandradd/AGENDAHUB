@model AGENDAHUB.Models.Usuario

<div id="usuarioFormContainer">

    <div class="col-xl-12 mb-4">

        <!-- _UsuarioForm.cshtml -->
    
<form asp-action="Edit" asp-controller="Configuracao" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group pt-2">
        <label asp-for="NomeUsuario" class="pt-2"></label>
        <div class="pt-2">
            <input asp-for="NomeUsuario" class="form-control" />
            <span asp-validation-for="NomeUsuario" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group pt-2">
        <label asp-for="Email" class="pt-2"></label>
        <div class="pt-2">
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group pt-2">
        <label asp-for="Senha" class="pt-2"></label>
        <div class="pt-2">
            <input asp-for="Senha" class="form-control" />
            <span asp-validation-for="Senha" class="text-danger"></span>
        </div>
    </div>

    <div class="justify-content-center">
        <div class="form-group pt-4">
            <a asp-action="Index" class="btn btn-outline-warning">Voltar</a>
            <button type="submit" class="btn btn-outline-info">Salvar</button>
        </div>
    </div>
</form>

</div>

