@model AGENDAHUB.Models.Caixa
<link rel="stylesheet" href="~/css/Caixa.css" asp-append-version="true" />

@{
    ViewData["Title"] = "Confirmar Exclusão";
}

<h3 class="text-center">Tem certeza de que deseja excluir este registro do Caixa?</h3>

<div class="container d-flex justify-content-center col-xl-8 col-12 mt-3">
    <div class="p-3" id="cardView">
        <dl class="row">
            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Categoria)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Categoria)</dd>

            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Valor)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Valor)</dd>

            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Data)</dt>
            <dd class="col-sm-10"> @string.Format("{0:dd MMM yyyy}", Model.Data)</dd>

            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Descricao)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Descricao)</dd>
        </dl>
    </div>
</div>

<div class="row mt-3">
    <div class="col d-flex justify-content-center">
        <form asp-action="Delete">
            <input type="hidden" asp-for="ID_Caixa" />
            <a asp-action="Index" class="btn btn-outline-warning">Voltar</a>
            <input type="submit" value="Excluir" class="btn btn-outline-danger" />
        </form>
    </div>
</div>
